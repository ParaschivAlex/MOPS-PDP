@model PDP.Models.Consultation

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Edit consultation</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ConsultationID)

    <div class="form-group">
        <div class="control-label col-md-2">
            <h6>Price</h6>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
        </div>

        <br />

        <div class="control-label col-md-2">
            <h6>Date</h6>
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.date_day, "{0:dd.MM.yyyy}", new { @class = "date-picker fullwidth", data_date_format = "dd.mm.yyyy" })
            @Html.ValidationMessageFor(model => model.date_day, "", new { @class = "text-danger" })
        </div>

        <br />

        <div class="control-label col-md-2">
            <h6>Pick a slot</h6>
        </div>

        <p>9:00 @Html.RadioButtonFor(m => m.slot_hour, "9:00")</p>
        <p>9:30 @Html.RadioButtonFor(m => m.slot_hour, "9:30")</p>
        <p>10:00 @Html.RadioButtonFor(m => m.slot_hour, "10:00")</p>
        <p>10:30 @Html.RadioButtonFor(m => m.slot_hour, "10:30") </p>
        @Html.ValidationMessageFor(m => m.slot_hour, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.ConsultationID, @Model.ConsultationID)
        @Html.HiddenFor(m => m.DoctorId, @Model.DoctorId)
        @Html.HiddenFor(m => m.UserId, @Model.UserId)

    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
