@model List<PDP.Models.Consultation>


@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}

<h2>@ViewBag.Title</h2>
<br />

<h2>Consultations available in the application</h2>
<br />

<a class="btn btn-primary" href="/Doctors/Create">Add consultation</a>
<hr />
<br />

@foreach (var consultation in Model)
{
    <div style="display: inline-block">
        <p> @consultation.Doctor.FirstName @consultation.Doctor.SecondName</p>
        <p> @consultation.date_day : @consultation.slot_hour </p>
    </div>
    <div style="float: right; height: 100%">
        <a class="btn btn-success" href="/Consultations/Edit/@consultation.ConsultationID" style="display: inline-block; margin-right: 1em;">Edit</a>
        <a class="btn btn-danger" href="/Consultations/Delete/@consultation.ConsultationID" style="display: inline-block;">Delete</a>
    </div>
    <br />
    <hr />
    <br />
}
