@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
	using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
	{
		@Html.AntiForgeryToken()

		<ul class="navbar navbar-nav navbar-right">
			<li class="nav-item">
				<a class="nav-link" href="/Manage/Index">My Account</a>
			</li>
			<li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
		</ul>
	}
}
else
{
	<ul class="navbar navbar-nav navbar-right">
		<li class="nav-item"><a class="nav-link" href="/Account/Register">Register</a></li>
		<li class="nav-item"><a class="nav-link" href="/Account/Login">Log in</a></li>
	</ul>
}